<div class="container">
  <div class="row">
    <% @tools.each do |tool| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <% image_url = tool.photo || 'http://placehold.it/50x300' %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_url %>');">
          <div class="card-price-show">
            <h3>$<%= tool.price %>/day</h3>
          </div>
          <div class="card-category"><%= tool.category %></div>
          <div class="card-description">
            <h2><%= tool.title %></h2>
            <p><%= tool.description %></p>
          </div>
          <%= link_to "", tool_path(tool), {class: "card-link"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
