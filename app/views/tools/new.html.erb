<div class="container">
  <%= simple_form_for @tool do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :tags, as: :check_boxes, collection: Tool::CATEGORIES %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Create Listing" %>
  <% end %>
  <%= link_to 'Back', tools_path %>
</div>
