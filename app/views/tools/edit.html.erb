<div class="wrapper-tool-add">
  <div class="container">
    <div class="new-tool-box">
  <%= simple_form_for @tool do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :tags, as: :check_boxes, collection: Tool::CATEGORIES, name: nil %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
      <div class="text-center">
        <%= f.submit "Edit" %>
  <% end %>
  <br>
  <br>
  <%= link_to 'Back', :back %>
      </div>
    </div>
  </div>
</div>
