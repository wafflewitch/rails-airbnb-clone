<div class="container" style="padding-top: 30px;">
  <h1 class="page-header">My Profile</h1>
  <div class="row ">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12 avatar-profile">
      <div class="text-center">
        <img src="https://unsplash.it/200/300?image=0" class="avatar avatar-xlarge" alt="avatar">
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <ul class="list-horizontal" role="form">
        <h3 class="text-center personal-info-title">Personal info</h3>
        <div class="list-group">
          <label class="col-md-3 control-label">First name:</label>
          <div class="col-md-8">
            <li class="list-group-item text-center" type="text"><%= current_user.first_name %></li>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Last name:</label>
          <div class="col-md-8">
            <li class="list-group-item text-center" type="text"><%= current_user.last_name %></li>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Email:</label>
          <div class="col-md-8">
            <li class="list-group-item text-center" type="text"><%= current_user.email %></li>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Address:</label>
          <div class="col-md-8">
            <li class="list-group-item text-center" type="text"><%= current_user.address %></li>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <li class="btn btn-primary edit-button-profile" type="button">Edit</li>
          </div>
        </div>
      </ul>
    </div>
  </div>

